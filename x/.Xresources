#include "/home/sidd-dino/.cache/wal/colors.Xresources"

!! Font stuff
urxvt.font:            xft:M+ 2m:size=8
urxvt.boldfont:        xft:M+ 2m:bold:size=8
urxvt.letterSpace: 0
urxvt.lineSpace: 0


!! Global stuff
urxvt.internalBorder:  50
urxvt.saveLines:       10000
urxvt.scrollBar:       false
urxvt.perl-ext-common: default,matcher,font-size
urxvt.cursorBlink:     true
urxvt.depth:           24

!! Change font size on Control-Plus/Minus
urxvt.keysym.C-+:     perl:font-size:increase
urxvt.keysym.C--:     perl:font-size:decrease

!! Clipboard Stuff
urxvt.keysym.Control-Meta-c: builtin-string:
urxvt.keysym.Control-Meta-v: builtin-string:

urxvt.keysym.Shift-Control-V: eval:paste_clipboard
urxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

urxvt.iso14755 : false

!! Word Navigation
urxvt.keysym.Control-Up:    \033[1;5A
urxvt.keysym.Control-Down:  \033[1;5B
urxvt.keysym.Control-Left:  \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C

!! URL stuff
urxvt.underlineURLs: true
urxvt.urlButton: 1
